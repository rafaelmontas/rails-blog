<%= turbo_frame_tag "post" do %>
  <h1><%= @post.title %></h1>
  <p><%= @post.body %></p>
  <ul>
    <li><%= link_to "Edit", edit_post_path(@post) %></li>
    <li><%= link_to "Back", posts_path, "data-turbo-frame": "_top" %></li>
    <li><%= link_to "Destroy", post_path(@post), "data-turbo-frame": "_top", data: {
                    turbo_method: :delete,
                    turbo_confirm: "Desea eliminar este post?"
                  } %></li>
  </ul>
<% end %>
