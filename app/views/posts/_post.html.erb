
<article class="blog-post">
  <a href="<%= post_path(post) %>" data-turbo-frame="_top">
    <h4><%= post.title %></h4>
    <p class="post-meta"><%= post.created_at.to_formatted_s(:short) %></p>
    <p><%= post.body %></p>
  </a>
  <div class="post-footer">
    <span>Categor√≠a: <a href="/categories/<%= post.category_name %>" data-turbo-frame="_top"><%= post.category_name %></a></span>
    <div class="tags">
    Tags:
      <% post.tags.each do |tag| %>
        <span><a href="/tags/<%= tag %>" data-turbo-frame="_top"><%= tag %></a></span>
      <% end %>
    </div>
  </div>
</article>